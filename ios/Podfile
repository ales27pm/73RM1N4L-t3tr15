require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`.strip), "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`.strip), "scripts/react_native_pods")

require 'json'
podfile_properties = begin
  JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json')))
rescue StandardError
  {}
end

if podfile_properties.key?('newArchEnabled')
  ENV['RCT_NEW_ARCH_ENABLED'] = podfile_properties['newArchEnabled'] == 'true' ? '1' : '0'
else
  ENV['RCT_NEW_ARCH_ENABLED'] ||= '0'
end
platform :ios, podfile_properties['ios.deploymentTarget'] || '15.1'
install! 'cocoapods',
  :deterministic_uuids => false

prepare_react_native_project!

target 'Netsight' do
  use_expo_modules!

  if ENV['EXPO_USE_COMMUNITY_AUTOLINKING'] == '1'
    config_command = ['node', '-e', "process.argv=['', '', 'config'];require('@react-native-community/cli').run()"];
  else
    config_command = [
      'npx',
      'expo-modules-autolinking',
      'react-native-config',
      '--json',
      '--platform',
      'ios',
    ]
  end

  config = use_native_modules!(config_command)

  # Force static linkage to prevent module/header conflicts
  use_frameworks! :linkage => :static

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => podfile_properties['expo.jsEngine'] == nil || podfile_properties['expo.jsEngine'] == 'hermes',
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :privacy_file_aggregation_enabled => podfile_properties['apple.privacyManifestAggregationEnabled'] != 'false'
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => podfile_properties['apple.ccacheEnabled'] == 'true'
    )

    # Fix header search paths and module map for RCTDeprecation and other RN modules
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Fix libdav1d assembly compilation - exclude React Native headers
        if target.name == 'libdav1d'
          # Clear problematic header search paths for assembly files
          config.build_settings['HEADER_SEARCH_PATHS'] = ['$(inherited)', '$(PODS_ROOT)/libdav1d', '$(PODS_ROOT)/libdav1d/generate']
          config.build_settings['USE_HEADERMAP'] = 'NO'
          config.build_settings['CLANG_ENABLE_MODULES'] = 'NO'
        else
          # Fix header search paths
          config.build_settings['HEADER_SEARCH_PATHS'] ||= ['$(inherited)']
          config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_ROOT)/Headers/Public'
          config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_ROOT)/Headers/Public/RCTDeprecation'
          config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_CONFIGURATION_BUILD_DIR)/RCTDeprecation/RCTDeprecation.framework/Headers'

          # Fix Yoga header paths for React Native 0.79+
          config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_ROOT)/yoga'
          config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_ROOT)/Headers/Public/yoga'
          config.build_settings['HEADER_SEARCH_PATHS'] << '$(PODS_CONFIGURATION_BUILD_DIR)/yoga/yoga.framework/Headers'

          # Fix module map search paths
          config.build_settings['SWIFT_INCLUDE_PATHS'] ||= ['$(inherited)']
          config.build_settings['SWIFT_INCLUDE_PATHS'] << '$(PODS_ROOT)/Headers/Public'
          config.build_settings['SWIFT_INCLUDE_PATHS'] << '$(PODS_ROOT)/Headers/Public/RCTDeprecation'

          # Ensure module map is properly loaded
          config.build_settings['MODULEMAP_FILE'] ||= '$(inherited)'
          config.build_settings['USE_HEADERMAP'] = 'YES'
          config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'

          # Disable precompiled headers for problematic targets
          if target.name.include?('RCT') || target.name.include?('React')
            config.build_settings['GCC_PRECOMPILE_PREFIX_HEADER'] = 'NO'
          end
        end
      end
    end

    # This is necessary for Xcode 14, because it signs resource bundles by default
    # when building for devices.
    installer.target_installation_results.pod_target_installation_results
      .each do |pod_name, target_installation_result|
      target_installation_result.resource_bundle_targets.each do |resource_bundle_target|
        resource_bundle_target.build_configurations.each do |config|
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        end
      end
    end
  end
end
